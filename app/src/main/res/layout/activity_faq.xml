        android:layout_margin="1dp"
        android:layout_gravity="fill_horizontal"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:drawableLeft="@drawable/icn_grey"
        android:text=" Status-Not Available"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_margin="1dp"
        android:layout_gravity="fill_horizontal"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:text="Q-2.How to check Outlook Status of Room?"
        android:textSize="15sp"
        android:layout_margin="1dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text="Ans. This information is coming for each room under the parameter Outlook"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text="Outlook: Unreserved"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="fill"
        android:textColor="@color/colorGreen" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text=" - Room is Unreserved and is open for booking"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text="Outlook: Reserved"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="fill"
        android:textColor="@color/colorRed" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text=" - Room is reserved and is not available for booking"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text="Outlook: NA"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text=" - Room Outlook Status is not available"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:text="Q-3. How to book the room from app?"
        android:textSize="14sp"
        android:layout_margin="1dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text="Ans. Please click on 'Tap to Book Room' button for the room to be booked , fill the details. Click on the 'Submit' button.
On successful booking, the Organizer and Attendees will get the e-mail notification and Calender-Event will be added.
Note -
Organizer Email (M) should be of nokia.com domain only
Attendees Email (O) should be comma (,) separated if multiple attendees are added
Subject (Mandatory field)
"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:text="Q-4.How to cancel the Booked Meeting Room?"
        android:textSize="14sp"
        android:layout_margin="1dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_margin="1dp"
        android:text="Ans. Only those meeting which are booked by SMR can be cancelled. Only organizer can cancel the meeting.
The cancellation link is provided in the Meeting Room Confirmation Email send by smartmeeting.admin@nokia.com
"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="fill"
        android:textColor="@color/colorBlack" />
