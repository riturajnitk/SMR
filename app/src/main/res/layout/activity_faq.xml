    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:text="Q-1.How to check Physical Status of Room?"
        android:layout_margin="1dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:text="Ans. Icon Colour signifies the Occupancy Status i.e room is occupied by someone or not."
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_margin="1dp"
        android:layout_gravity="fill_horizontal"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:drawableLeft="@drawable/icn_red"
        android:text=" Occupied"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_margin="1dp"
        android:layout_gravity="fill_horizontal"
        android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:drawableLeft="@drawable/icn_green"
