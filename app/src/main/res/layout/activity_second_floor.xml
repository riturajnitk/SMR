<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar">
    </include>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/colorNokia"
        app:srcCompat="@mipmap/img_room_nokia" />

        <LinearLayout
            android:id="@+id/ll_sf_lynx"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_weight="0"
            android:layout_margin="20sp"
            android:background="@drawable/button_rounded_room"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_lynx"

                android:textColor="@color/colorWhite"
                />
            <ImageView
                android:id="@+id/btn_lynx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icn_grey" />



            <!--<TextView-->
